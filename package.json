{
  "name": "xh-media-picker",
  "displayName": "悬壶灵感采集",
  "type": "module",
  "version": "1.0.1",
  "private": true,
  "description": "悬壶灵感采集，浏览器插件",
  "repository": {
    "type": "git",
    "url": "https://github.com/mubaidr/vite-vue3-chrome-extension-v3"
  },
  "scripts": {
    "start": "npm run dev",
    "dev": "concurrently \"npm run dev:chrome\" \"npm run dev:firefox\"",
    "dev:chrome": "vite -c vite.chrome.config.ts",
    "dev:firefox": "vite build --mode development --watch -c vite.firefox.config.ts",
    "build": "npm run build:chrome && npm run build:firefox",
    "build:chrome": "vite build -c vite.chrome.config.ts",
    "build:firefox": "vite build -c vite.firefox.config.ts",
    "format": "prettier --write .",
    "lint": "eslint . --fix",
    "lint:manifest": "web-ext lint --pretty",
    "preview": "vite preview",
    "typecheck": "vue-tsc --noEmit"
  },
  "dependencies": {
    "element-plus": "^2.8.6",
    "marked": "^14.1.2",
    "pinia": "^2.2.4",
    "vue": "^3.5.11",
    "vue-demi": "^0.14.10",
    "vue-router": "^4.4.5",
    "webextension-polyfill": "^0.12.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^3.7.3",
    "@crxjs/vite-plugin": "^2.0.0-beta.25",
    "@iconify-json/mdi": "^1.2.0",
    "@types/eslint": "^9.6.1",
    "@types/node": "^22.7.4",
    "@types/webextension-polyfill": "^0.12.1",
    "@vitejs/plugin-vue": "^5.1.4",
    "@vue/compiler-sfc": "^3.5.11",
    "@vueuse/core": "^11.1.0",
    "autoprefixer": "^10.4.20",
    "chrome-types": "^0.1.307",
    "concurrently": "^9.0.1",
    "cross-env": "^7.0.3",
    "daisyui": "^4.12.12",
    "eslint": "^9.12.0",
    "globals": "^15.10.0",
    "postcss": "^8.4.47",
    "prettier": "^3.3.3",
    "sass": "^1.79.4",
    "terser": "^5.34.1",
    "typescript": "^5.6.2",
    "unplugin-auto-import": "^0.18.3",
    "unplugin-element-plus": "^0.8.0",
    "unplugin-icons": "^0.19.3",
    "unplugin-vue-components": "^0.27.4",
    "unplugin-vue-router": "^0.10.8",
    "vite": "^5.4.8",
    "vite-plugin-pages": "^0.32.3",
    "vite-plugin-vue-devtools": "^7.4.6",
    "vue-tsc": "^2.1.6",
    "web-ext": "^8.3.0",
    "webext-bridge": "^6.0.1"
  },
  "pnpm": {
    "overrides": {},
    "peerDependencyRules": {
      "allowAny": [],
      "allowedDeprecatedVersions": {
        "sourcemap-codec": "1.4.8"
      },
      "allowedVersions": {},
      "ignoreMissing": []
    }
  },
  "overrides": {
    "@crxjs/vite-plugin": "$@crxjs/vite-plugin"
  }
}
